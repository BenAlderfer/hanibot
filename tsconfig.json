{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build", // where to put the compiled JS files
  },
  "include": ["src"], // which files to compile
  "exclude": ["node_modules"], // which files to skip
}
